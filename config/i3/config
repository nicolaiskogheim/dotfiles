bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        tray_padding 0
        mode hide
        modifier $mod_alt
        #modifier Mod1
        colors {
                background          $bg
                focused_workspace   $bg $lime $bg
                active_workspace    $bg $bg   #FFFFFF
                inactive_workspace  $bg $bg   $fg

        }
}

